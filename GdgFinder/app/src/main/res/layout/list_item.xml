<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.android.gdgfinder.search.GdgListFragment">

    <ImageView
        android:id="@+id/ivGdg"
        android:layout_width="50dp"
        android:layout_height="76dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="26dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_gdg" />

    <TextView
        android:id="@+id/tvChapterName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:text="@{chapter.name}"
        android:textAppearance="?textAppearanceHeadline6"
        app:layout_constraintBottom_toBottomOf="@+id/ivGdg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivGdg"
        app:layout_constraintTop_toTopOf="@+id/ivGdg"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="GDG Mountain View is really long so it will wrap in tools" />
</androidx.constraintlayout.widget.ConstraintLayout>
